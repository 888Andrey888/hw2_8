<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Gray.Button" parent="Base.Button">
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:onClick">onOperationClick</item>
    </style>

    <style name="Orange.Button" parent="Base.Button">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:onClick">onOperationClick</item>
    </style>

    <style name="Dark.Button" parent="Base.Button">
        <item name="android:backgroundTint">@color/dark</item>
        <item name="android:onClick">onNumberClick</item>
    </style>

    <style name="Home.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawableRight">@drawable/baseline_arrow_right_24</item>
    </style>
</resources>